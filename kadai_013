def add_calculate_tax_price(price, tax):
  total = int(price + price * tax)
  print(f"{total}円")
add_calculate_tax_price(1000, 0.1)

add_calculate_tax_price = True

def add_calculate_tax_price():
    if (add_calculate_tax_price):
        return True
    else:
        return False

if (add_calculate_tax_price()):
    print("商品は購入済みです。")
